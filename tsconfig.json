{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": [
    "**/next-env.d.ts",
    "**/.next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/dist/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
